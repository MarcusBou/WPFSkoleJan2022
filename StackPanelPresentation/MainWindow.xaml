<Window x:Class="StackPanelPresentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StackPanelPresentation"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="0,2,0,0" Grid.Row="0">
            <Button>This is a Button in a vertical stackpanel</Button>
            <Label>This is a Label in a vertical stackpanel</Label>
            <Label Background="Aqua">This is a colored Panel in a vertical stackpanel</Label>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button>This is a Button in a vertical stackpanel</Button>
            <Label>This is a Label in a vertical stackpanel</Label>
            <Label Background="Green">This is a colored Panel in a vertical stackpanel</Label>
        </StackPanel>

    </Grid>
</Window>
